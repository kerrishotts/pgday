{
    "compilerOptions": {
        "allowJs": true,
        "target": "es5",
        "module": "es2015",
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "dom.iterable",
            "es2015",
            "es2015.collection",
            "es2015.core",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
